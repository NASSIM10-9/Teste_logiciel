<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
    <configuration>
        <!-- Report theme -->
        <theme>dark</theme>
        
        <!-- Document title -->
        <documentTitle>Test Automation Exam Report</documentTitle>
        
        <!-- Name of the report -->
        <reportName>Rapport de Test Automatis√©</reportName>
        
        <!-- Timestamp format -->
        <timeStampFormat>MMM dd, yyyy HH:mm:ss</timeStampFormat>
        
        <!-- Enable screenshots in the report -->
        <enableScreenshots>true</enableScreenshots>
        
        <!-- Screenshot folder path -->
        <screenshotFolder>./</screenshotFolder>
        
        <!-- Custom CSS -->
        <css>
            .nav-wrapper { background-color: #1e88e5 !important; }
            .brand-logo { color: white !important; }
            .nav-wrapper > ul > li.active > a { background-color: rgba(0,0,0,0.1) !important; }
            .test-steps img { max-width: 100%; height: auto; border: 1px solid #ddd; margin: 10px 0; }
        </css>
        
        <!-- Custom JavaScript -->
        <js>
            $(document).ready(function() {
                $('.logo').text('Test Automation Exam');
            });
        </js>
    </configuration>
</extentreports>

